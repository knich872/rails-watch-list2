<div class="container">
  <%= @list.name %>
  <div class="row">
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list_id: @list, movie_id: movie) %>
      <div class="card mb-3" style="max-width: 400px;">
        <img src="<%= movie.poster_url %>" class="card-img-top" alt="Movie poster">
        <div class="card-body">
          <h5 class="card-title"><%= movie.title %> <i class="fa-solid fa-star" style="color: orange;"></i> <%= movie.rating %></h5>
          <p class="card-text"><%= movie.overview %></p>
          <p class="card-text"><small class="text-muted"><%= bookmark.comment %> <%= button_to "Remove this movie", @bookmark, method: :delete, class: "btn btn-secondary" %></small></p>
        </div>
      </div>
    <% end %>
  </div>

    <%= link_to "Add movie to list", new_list_bookmark_path(@list) %>
    <%= link_to "Back to lists", lists_path %>
    <%= button_to "Destroy this list", @list, method: :delete %>

</div>
